{
  "tasks": [
    {
      "type": "cppbuild",
      // "label": "C++: clang++ build active file",
      "label": "Build",
      "command": "/usr/bin/clang++",
      "args": [
        "-o2",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-o",
        "${fileDirname}/.Trash/${fileBasenameNoExtension}",
        "-g",
        "-g3",
        "-std=c++2b",
        "-Wall",
        "${file}" //单文件的设置
        // "${fileDirname}/*.cpp", //多文件的设置
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "detail": "Tasks generated by the Debugger"
    }
  ],
  "version": "2.0.0"
}
