{
  "tasks": [
    {
      "label": "Build", // 任务名
      // "label": "C++: clang++ build active file",
      "type": "cppbuild", // 任务类型，cppbuild是vscode的内置任务类型
      "command": "/usr/bin/clang++", // 任务执行的命令
      "args": [
        "-std=c++23", //控制编译的版本，以最后一个为准
        "-o2",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-o",
        "${fileDirname}/.Trash/${fileBasenameNoExtension}",
        "-g",
        "-g3",
        "${file}", //单文件的设置
        // "${fileDirname}/*.cpp", //多文件的设置
        "-Wall"
      ],
      "options": {
        "cwd": "${fileDirname}" //
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "detail": "Tasks generated by the Debugger" //任务的详细信息
    }
  ],
  "version": "2.0.0"
}
